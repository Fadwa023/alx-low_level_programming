#include "main.h"

/**
 * print_line - function that draws a straight line in the terminal.
 *
 * @n: number of times the character _ should be printed
 *
 * Return: Always 0.
 */

void print_line(int n)
{
int x;
char line = _;
 char straight = line * x;

 
  if (x <=0)
{    
_putchar('\n');
}    
else (x < n)
{
_putchar(straight + 0);

 _putchar('\n');
}
